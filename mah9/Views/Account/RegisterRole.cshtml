@model mah9.Models.RegisterViewModel
@{
    ViewBag.Title = "register Roles";
}

<h2>registerRole</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "from-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>create new account</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class=" form-group">
        @Html.Label("Select Role", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select User", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>

}



