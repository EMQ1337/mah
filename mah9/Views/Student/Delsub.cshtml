@model mah9.Models.StudentModel

@{
    ViewBag.Title = "Delete Subject";
}

<h2>Delete Subject from Student.</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Student ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SeconID)
        </dd>
        <dt>
            @Html.DisplayName("Subject")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Roles)
        </dd>
    </dl>


    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { style = "display: none;", @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Subject, ViewBag.subject as SelectList, "Please Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SeconID, htmlAttributes: new { style = "display: none;", @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SeconID, new { htmlAttributes = new { style = "display: none;", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SeconID, "", new { style = "display: none;", @class = "text-danger" })
        </div>
    </div>


    <div>
        @Html.LabelFor(model => model.Class, htmlAttributes: new { style = "display: none;", @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Class, ViewBag.ClassName as SelectList, "Please Select", new { style = "display: none;", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Class, "", new { style = "display: none;", @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="DELETE" class="btn btn-danger" onclick="return confirm('Are you sure you want to DELETE the Subject : @Model.Subject')" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
