            @Html.EditorFor(model => model.OldClassName, new { htmlAttributes = new { style = "display: none;", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OldClassName, "", new { style = "display: none;", @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="DELETE" class="btn btn-danger" onclick="return confirm('Are you sure you want to DELETE the Class : @Model.ClassName')" />
        </div>
    </div>
</div>


}

