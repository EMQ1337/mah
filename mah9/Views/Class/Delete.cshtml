
@model mah9.Models.ClassModel

@{
    ViewBag.Title = "Delete Class";
}

<h2>Delete Class.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>
    </dl>
    <div class="form-group">
        @Html.LabelFor(model => model.ClassID, htmlAttributes: new { style = "display: none;", @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ClassID, new { htmlAttributes = new { style = "display: none;", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ClassID, "", new { style = "display: none;", @class = "text-danger" })

        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.ClassName, htmlAttributes: new { style = "display: none;", @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { style = "display: none;", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ClassName, "", new { style = "display: none;", @class = "text-danger" })

        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.OldClassName, htmlAttributes: new { style = "display: none;", @class = "control-label col-md-2" })
